<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Money">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@+id/result"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/sign"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/lexend_medium"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/solution"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:fontFamily="@font/lexend_medium"
            android:text="0 VND"
            android:textAlignment="viewEnd"
            android:textSize="32sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/VerticalLayout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/lexend_medium"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="64sp" />

    <LinearLayout
        android:id="@+id/VerticalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_My"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="ActionButt"
                android:text="$"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_Nhat"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="ActionButt"
                android:text="¥"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="29dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_Anh"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="ActionButt"
                android:text="£"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="8"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="9"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_AC"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="ClearButt"
                android:text="AC"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Butt_000"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lexend_medium"
                android:onClick="numButt"
                android:text="000"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:cornerRadius="40dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>